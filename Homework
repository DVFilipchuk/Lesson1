    private static float Calc_it(int a,int b,int c,int d){ // метод для 1 задания
        Scanner scanner = new Scanner(System.in);
        float result = a*(b+(c/d));
        return result;
    }

    private static int Check1(int one,int two){ // метод для 2 задания
        Scanner scanner = new Scanner(System.in);
        int res = one + two;
        if (res <= 20 || res > 10) System.out.println("Сумма чисел равна " + res + " и лежит внутри диапазона");
        else  System.out.println("Сумма чисел равна " + res + " и лежит вне диапазона");
        return res;
    }

    private static int Check2(int number){ // метод для 3 задания
